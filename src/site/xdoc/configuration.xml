<?xml version="1.0" encoding="UTF-8"?>
<document>
	<properties>
		<title>Introduction</title>
	</properties>
	<body>
		<section name="Configuration">
			<subsection name="Configurable files">
				<p>
					<strong>crm.properties :</strong>
				</p>
				<table>
					<tr>
						<th>
							Proprerty
						</th>
						<th>
							Description
						</th>
					</tr>
					<tr>
						<td>
							crm.listCategories.itemsPerPage
						</td>
						<td>
							Number of categories to display by default in the paginator in the admin interface of the plugin.
						</td>
					</tr>
					<tr>
						<td>
							crm.listDemandTypes.itemsPerPage
						</td>
						<td>
							Number of demand types to display by default in the paginator in the admin interface of the plugin.
						</td>
					</tr>
					<tr>
						<td>
							crm.crmUser.maxSize
						</td>
						<td>
							Max character size for the crm user account.
						</td>
					</tr>
					<tr>
						<td>
							daemon.crmDemandCleaner.interval
						</td>
						<td>
							Draft cleaner daemon intervention interval.
						</td>
					</tr>
					<tr>
						<td>
							daemon.crmDemandCleaner.onstartup
						</td>
						<td>
							Activate or not the daemon on startup.
						</td>
					</tr>
					<tr>
						<td>
							daemon.crmDemandCleaner.nbExpirationDays
						</td>
						<td>
							Number of days after the closing date of the demand type in which the demand, that has the status "Draft", will be deleted
						</td>
					</tr>
				</table>
			</subsection>
		</section>
	</body>
</document>
